<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_margin="10dp"

        android:weightSum="1">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9800"
            android:gravity="center"
            android:textColor="#fff"
            android:padding="20dp"
            android:text="Education / Qualifications"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details of Education"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                android:id="@+id/txtcert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:textStyle="bold"
                android:paddingTop="15dp"
                android:textColor="#fff"
                android:background="#558B2F"
                android:layout_marginTop="10dp"
                android:text="Certificate/Degree" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:textColor="#000"
                android:textSize="14sp"
                android:text="Mobile Application Development"/>


            <TextView
                android:id="@+id/txtinst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Institution"
                android:textStyle="bold"
                android:background="#558B2F"
                android:textColor="#fff"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="MLab CodeTribe"
                android:layout_marginLeft="9dp" />

            <TextView
                android:id="@+id/txtqual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of Qualification"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="#558B2F"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_marginLeft="9dp"
                android:text="Certificate"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Year"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="#558B2F"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="2017"
                android:textSize="14sp"
                android:textColor="#000"
                android:entries="@array/start_year"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year Completed"
                android:textStyle="bold"
                android:background="#558B2F"
                android:textColor="#fff"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp"
                android:text="2018"
                android:layout_marginLeft="9dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:gravity="end">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="add"
                    android:layout_marginRight="9dp"
                    android:drawableRight="@drawable/ic_border_color_black_24dp"
                    android:background="@drawable/codetribe_button_orange"/>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>