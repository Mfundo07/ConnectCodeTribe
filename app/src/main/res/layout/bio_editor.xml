<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="9dp"
    android:elevation="8dp"
    tools:context="com.example.android.connectcodetribe.Skill_Editor_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="4"
        android:background="#F2F7FF"
        android:orientation="vertical">


        <EditText
            android:id="@+id/bio_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:layout_margin="16dp"
            android:layout_weight="3"
            android:fontFamily="sans-serif-condensed"
            android:hint="Write something about yourself"
            android:maxLines="40"/>
        <Button
            android:id="@+id/bio_text_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:alpha="0.50"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="add bio"
            android:textColor="@color/colorPrimary"
            android:padding="8dp"
            android:layout_margin="8dp"/>


    </LinearLayout>

</android.support.v7.widget.CardView>