<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    tools:context="com.example.android.connectcodetribe.SkillsActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#93c841"
                android:text="ADD SKILLS"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="22dp"
                android:layout_weight="3"
                android:textStyle="bold" />

                <Button
                    android:id="@+id/checkedBtn"
                    android:layout_width="35dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/checkedd"
                    android:onClick="final_selection"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/javaS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="Java Script" />

                    <CheckBox
                        android:id="@+id/java"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="Java" />

                    <CheckBox
                        android:id="@+id/html"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="HTML" />
                    <CheckBox
                        android:id="@+id/css"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="CSS" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/xml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="Designing" />

                    <CheckBox
                        android:id="@+id/photoshop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="Photoshop" />

                    <CheckBox
                        android:id="@+id/database"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="Database"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/json"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="Visual Basic" />

                    <CheckBox
                        android:id="@+id/sql"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="SQL" />

                    <CheckBox
                        android:id="@+id/php"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="PHP" />

                    <CheckBox
                        android:id="@+id/cplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="C++"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/csharp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="java1"
                        android:text="C#"/>

                    <Button
                        android:id="@+id/otherBtn"
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#2378"
                        android:onClick="final_selection"
                        android:text="other"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000" />

                </LinearLayout>

                <TextView
                    android:id="@+id/skill_title"
                    android:layout_width="1dp"
                    android:layout_height="1dp" />


                <ImageView
                    android:id="@+id/skill_display_picture"
                    android:layout_width="1dp"
                    android:layout_height="1dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#93c841"
                android:text="SKILLS"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/final_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="#000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#93c841"
                android:text="Other Skills"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/otherView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="#000"
                android:text="(i) Press 'OTHER' to enter your own skill "
                android:inputType="textMultiLine"/>
            <TextView
                android:id="@+id/otherView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="#000"
                android:inputType="textMultiLine"/>

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>
