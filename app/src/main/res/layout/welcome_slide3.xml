<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/grey_300">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/register_personal_title_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                android:layout_weight="1">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/personal_details"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/register_personal_info_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:text="@string/name_text"
                            android:gravity="center_vertical"
                            android:textColor="#000"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>

                        <EditText
                            android:id="@+id/register_name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textColor="#000"
                            android:hint="@string/name_hint"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/surname_text"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textColor="#000"
                            android:id="@+id/register_surname_edit_text"
                            android:hint="@string/surname_hint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:text="@string/age_text"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:id="@+id/register_age_edit_text"
                            android:hint="@string/age_hint" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:text="@string/gender"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>

                        <EditText
                            android:id="@+id/register_gender_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="16dp"
                            android:paddingLeft="16dp"
                            android:textSize="12sp"
                            android:paddingEnd="16dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:text="@string/ethnicity"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>

                        <EditText
                            android:id="@+id/register_ethnicity_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="16dp"
                            android:paddingLeft="16dp"
                            android:textSize="12sp"
                            android:paddingEnd="16dp"
                            android:layout_weight="1"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:text="@string/cell_number"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:id="@+id/register_cell_number_edit_text"
                            android:textColor="#000"
                            android:hint="@string/cell_hint"
                            tools:ignore="TextFields"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:text="@string/email"
                            android:textColor="#000"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:id="@+id/register_email_edit_text"
                            android:textColor="#000"
                            android:hint="@string/email_hint"
                            tools:ignore="TextFields"/>
                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>







            <android.support.v7.widget.CardView
                android:id="@+id/register_code_tribe_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                android:layout_weight="1">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/codetribe_details"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/register_code_tribe_info_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:text="@string/codetribe_location"
                            android:textColor="#000"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/register_code_tribe_name_spinner"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:text="@string/employee_code"
                            android:textColor="#000"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:id="@+id/register_emc_edit_text"
                            android:textColor="#000"
                            android:hint="@string/employee_code_hint" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:text="@string/codetribe_program_status"
                            android:textColor="#000"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/register_tribe_status_spinner"/>
                    </LinearLayout>




                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/register_education_title_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/education"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/register_qualification_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:text="@string/highest_qualification"
                            android:textColor="#000"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:id="@+id/register_qualification_type_edit_text"

                            android:textColor="#000"
                            android:hint="@string/certificate_hint"
                            tools:ignore="TooManyViews"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        tools:ignore="TooManyViews">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:text="@string/qualification_institution"
                            android:textColor="#000"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:id="@+id/register_institution_edit_text"
                            android:textColor="#000"
                            android:hint="@string/institution_hint" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:text="@string/qualification_description"
                            android:textColor="#000"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            tools:ignore="NestedWeights"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:id="@+id/register_faculty_course_edit_text"
                            android:textColor="#000"
                            android:hint="@string/study_field_hint"/>
                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profile_list_back_fab_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_view_list_white" />




</RelativeLayout>