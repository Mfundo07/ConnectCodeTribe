<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon"/>

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

    <ProgressBar
        android:id="@+id/progress_bar_employee_number"
        android:layout_width="match_parent"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:progress="10"
        android:max="10"
        android:progressDrawable="@drawable/progress_custom"
        android:layout_gravity="center"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

    <EditText
        android:id="@+id/employee_code_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g CTR9999"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:textSize="14sp"/>

        </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1">

        <Spinner
            android:id="@+id/code_tribe_option_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="8dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dropdown" />


    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

    <Button
        android:id="@+id/employee_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="search"
        android:layout_margin="8dp"
        android:textColor="#fff"
        android:background="@drawable/button_green"/>
            </LinearLayout>

</LinearLayout>