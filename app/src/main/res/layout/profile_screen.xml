<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_margin="8dp"
    android:layout_alignParentStart="true"
    android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="220dp"
                            android:layout_marginStart="85dp"
                            android:background="#93c841" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView5"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:layout_gravity="left"
                            app:civ_border_color="#93c841"
                            app:civ_border_width="3dp"
                            android:paddingStart="20dp"
                            android:src="@drawable/kratos" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/user_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kgomotso"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/user_profile_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngaleka"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:layout_weight="1"
                        android:textStyle="bold" />

                </LinearLayout>
                    <TextView
                        android:id="@+id/user_profile_status"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="11sp"
                        android:text="In Program "
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textStyle="italic" />

                        <TextView
                            android:id="@+id/user_profile_codeTribe"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Soweto Codetribe"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/Userprofile_employeeCode"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Employee Code"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/Userprofile_ethenicity"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Ethnicity"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/Userprofile_gender"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Gender"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/Userprofile_age"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Age"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/Userprofile_email"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Email Add"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/Userprofile_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Mobile No"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:textStyle="italic" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="16dp"
        android:backgroundTint="#93c841">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">
        <include
            android:id="@+id/include"
            layout="@layout/skills_items"
            app:layout_anchorGravity="bottom|center"
            tools:layout_editor_absoluteY="400dp" />

        </LinearLayout>
                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#93c841"
                    android:backgroundTint="#93c841"
                    app:tabIndicatorColor="#fff"
                    app:tabSelectedTextColor="#000"
                    app:tabTextColor="#fff">

                    <android.support.design.widget.TabItem
                        android:id="@+id/tabItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#000"
                        android:text="@string/tab_text_1" />

                    <android.support.design.widget.TabItem
                        android:id="@+id/tabItem2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#000"
                        android:text="@string/tab_text_2" />

                    <android.support.design.widget.TabItem
                        android:id="@+id/tabItem3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#000"
                        android:text="@string/tab_text_3" />

                </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v4.view.ViewPager>


    </android.support.v7.widget.CardView>

        </LinearLayout>


